{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "pretty": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}