{
  "name": "github-action-todo-commenter",
  "version": "1.0.0",
  "main": "lib/index.js",
  "repository": "https://github.com/gkampitakis/github-action-todo-commenter",
  "author": "gkampitakis",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "verbose": true,
    "collectCoverage": true,
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "collectCoverageFrom":[
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
